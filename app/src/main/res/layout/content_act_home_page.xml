<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_act_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="iii.org.tw.getpet.ActHomePage">

    <LinearLayout
        android:id="@+id/upArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/demophoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/downArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableTop="@drawable/home_icon1"
                android:layout_weight="1"
                android:id="@+id/btnGoAdoptSearch"
                android:text="認養搜尋"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/home_icon2"
                android:layout_weight="1"
                android:id="@+id/btnGoPairSetting"
                android:text="配對設定"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/home_icon3"
                android:layout_weight="1"
                android:id="@+id/btnGoPetHelper"
                android:text="寵物小幫手"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableTop="@drawable/home_icon4"
                android:layout_weight="1"
                android:id="@+id/btnGoMapSearch"
                android:text="地圖尋找"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/home_icon5"
                android:layout_weight="1"
                android:id="@+id/btnGoUpload"
                android:text="送養管理"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/home_icon6"
                android:layout_weight="1"
                android:id="@+id/btnGoSetting"
                android:text="系統設定"
                android:textSize="12dp"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
