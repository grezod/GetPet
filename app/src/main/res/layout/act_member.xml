<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSilverGray"
    tools:context="iii.org.tw.getpet.ActMember">

    <LinearLayout
        android:id="@+id/upArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--預留圖片瀏覽-->
        <ViewFlipper
            android:background="@color/colorSilverGray"
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:foregroundGravity="center">

            <ImageView
                android:background="@color/colorSilverGray"
                android:id="@+id/ivPhoto1"
                android:layout_width="1200px"
                android:layout_height="820px"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/category_adoptpair" />

        </ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorSilverGray"
        android:id="@+id/downArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/colorSilverGray"
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:background="@color/colorSilverGray"
                android:id="@+id/btnGoRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/vc_signup_xhdpi"
                android:gravity="center"
                android:textSize="14dp" />

            <ImageButton
                android:background="@color/colorSilverGray"
                android:id="@+id/btnGoSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/vc_login_xhdpi"
                android:gravity="center"
                android:text="會員登入"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorSilverGray"
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <ImageButton
                android:background="@color/colorSilverGray"
                android:id="@+id/btnGoMsgBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/vc_message_xhdpi"
                android:gravity="center"
                android:text="個人訊息"
                android:textSize="14dp" />

            <ImageButton
                android:background="@color/colorSilverGray"
                android:id="@+id/btnGoFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/vc_tracklist_xhdpi"
                android:gravity="center"
                android:text="追蹤清單"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
