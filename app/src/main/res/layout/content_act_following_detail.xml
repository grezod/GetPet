<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_act_following_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="iii.org.tw.getpet.ActFollowingDetail"
    tools:showIn="@layout/act_following_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--預留圖片瀏覽-->
            <ViewFlipper
                android:foregroundGravity="center"
                android:id="@+id/viewflipper"
                android:layout_width="match_parent"
                android:layout_height="243dp"
                android:layout_marginBottom="20dp" >

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivPhotoOne"
                    android:layout_width="800px"
                    android:layout_height="800px"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_photo" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivPhotoTwo"
                    android:layout_width="800px"
                    android:layout_height="800px"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_photo" />

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivPhotoThree"
                    android:layout_width="800px"
                    android:layout_height="800px"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_photo" />

            </ViewFlipper>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="小名："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvName"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="品種："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvType"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="性別："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvSex"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="毛色："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvColor"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line3"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="年紀："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="所在地："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvArea"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line4"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="晶片："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvIfChip"
                        android:text="xxxxxxxxxx"
                        android:layout_width="80dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="生育："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvIfBirth"
                        android:text="xxxxxxxxxx"
                        android:layout_width="100dp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line5"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="健康狀態："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvHealthy"
                        android:text="xxxxxxxxxx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line6"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="病況說明："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvDisease"
                        android:text="xxxxxxxxxx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line7"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="送養理由："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tvReason"
                        android:text="xxxxxxxxxx"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line8"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="備註："
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvNote"
                            android:text="xxxxxxxxxx"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line9"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnCheckCond"
                        android:text="認養條件"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_margin="20px"
                    android:id="@+id/line10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btnLeaveMsg"
                        android:text="留言板"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btnTrack"
                        android:text="我要追蹤"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/btnAdopt"
                        android:text="我要認養"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </ScrollView>

</RelativeLayout>
