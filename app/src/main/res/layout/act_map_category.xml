<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_map_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iii.org.tw.getpet.ActMapCategory">

    <LinearLayout
        android:id="@+id/upArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <!--預留圖片瀏覽-->
        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="20dp"
            android:foregroundGravity="center">

            <ImageView
                android:id="@+id/ivPhoto1"
                android:layout_width="1200px"
                android:layout_height="820px"
                android:layout_gravity="center"
                android:background="@color/colorBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/category_adoptpair" />

        </ViewFlipper>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/downArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:background="@color/colorBackground"
                    android:id="@+id/btn_AnimalHospital"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/vc_map_hospital" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_AnimalHospital"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10px"
                    android:text="動物醫院"
                    android:textColor="@color/colorHomeText"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:background="@color/colorBackground"
                    android:id="@+id/btn_PetShop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/vc_map_petshop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_PetShop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10px"
                    android:text="合格寵物業者"
                    android:textColor="@color/colorHomeText"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:background="@color/colorBackground"
                    android:id="@+id/btn_Injection"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/vc_map_injection" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_Injection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10px"
                    android:text="狂犬病注射站"
                    android:textColor="@color/colorHomeText"
                    android:textSize="14dp" />
            </RelativeLayout>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:id="@+id/line2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_marginTop="20px"-->
            <!--android:layout_weight="1"-->
            <!--android:orientation="horizontal">-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>


</LinearLayout>
